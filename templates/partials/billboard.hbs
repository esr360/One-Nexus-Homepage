<div class="billboard{{#each billboard.modifiers}}-{{.}}{{/each}}">
    {{#inArray billboard.modifiers 'fullscreen'}}
        <div class="billboard_wrapper{{#if wide}}-wide{{/if}} text-center">
            {{#if billboard.heading}}
                <h1 class="heading-light-size-9 font-2">{{billboard.heading}}</h1>
            {{/if}}
            {{#if billboard.subHeading}}
                <p>{{billboard.subHeading}}</p>
            {{/if}}
        </div>
    {{else}}
        <div class="billboard_wrapper{{#is layout 'base-wide.hbs'}}-wide{{/is}}">
            {{#if billboard.heading}}
                <h1 class="heading-light-size-7-heavy font-2">{{billboard.heading}}</h1>
            {{/if}}
            {{#if billboard.subHeading}}
                <p>{{billboard.subHeading}}</p>
            {{/if}}
            {{#if billboard.resource}}
                <i class="fa fa-{{billboard.resource.icon}}"></i>
                <a href="{{billboard.resource.link}}" target="blank">{{billboard.resource.text}}</a>
            {{/if}}
        </div>
    {{/inArray}}
</div>