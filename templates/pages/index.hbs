                                    ), $custom) !global;

                                    // Module
                                    @include module() {
                                        position: absolute;
                                        top: this('offset');
                                        background: this('bg-color');

                                        @include modifier('fixed') {
                                            position: fixed;
                                            top: 0;
                                        }
                                    }
                                    
