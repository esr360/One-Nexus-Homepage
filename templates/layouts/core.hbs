---
title: One Nexus
bodyClass: ''
contentID: 'site-content'
modulesID: 'modulesConfigJSON'
jQuery: 2.2.4
OwlCarousel: 2.2.0
FontAwesome: 4.7.0
---
<!DOCTYPE html>
<html lang="en-GB">

    <head>
        <title>{{title}}</title>

        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        {{#is environment "dev"}}
            <link href="{{assets}}assets/themes/{{theme}}/app.css" rel="stylesheet">
        {{/is}}
        {{#is environment "prod"}}
            <link href="{{assets}}assets/themes/{{theme}}/app.min.css" rel="stylesheet">
        {{/is}}
    </head>

    <body class="{{bodyClass}}">
        {{> body}}
    </body>

    <div id="{{modulesID}}"></div>

    {{#if jQuery}}
        <script src="http://code.jquery.com/jquery-{{jQuery}}.min.js" crossorigin="anonymous"></script>
    {{/if}}

    {{#if OwlCarousel}}
        <link href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/{{OwlCarousel}}/assets/owl.carousel.min.css" rel="stylesheet">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/{{OwlCarousel}}/owl.carousel.min.js"></script>
    {{/if}}

    {{#if FontAwesome}}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/{{FontAwesome}}/css/font-awesome.min.css" />
    {{/if}}

    {{#if Prism}}
        <!-- Load syntax highlighter -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/{{Prism}}/prism.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/{{Prism}}/components/prism-css.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/{{Prism}}/components/prism-scss.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/{{Prism}}/components/prism-javascript.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/{{Prism}}/components/prism-markup.min.js"></script>
        <link  href="https://cdnjs.cloudflare.com/ajax/libs/prism/{{Prism}}/themes/prism.min.css" rel="stylesheet" />
        <!-- Handle code indentation -->
        <script>      
            $('pre code').each(function(i, block) {
                var lines = block.textContent.split('\n');

                if (lines[0] === '') {
                    lines.shift()
                }

                var matches = /^[\s\t]+/.exec(lines[0]);
    
                if (matches) {
                    var indentation = matches[0];
                }

                if (indentation) {
                    lines = lines.map(function(line) {
                        line = line.replace(indentation, '')
                        return line.replace(/\t/g, '    ')
                    });

                    block.textContent = lines.join('\n').trim();
                }
            });
        </script>
        <!-- Botch styles -->
        <style>
            pre[class*="language"] {
                /*
                box-shadow: 1px 1px 5px rgba(0, 0, 0, 0.1);
                background: white;
                */
            }
            pre.border {
                border-bottom: 6px solid rgba(0,0,0,0.075);
            }
        </style>
    {{/if}}

    {{#each scripts}}
        <script src="{{../assets}}{{.}}"></script>
    {{/each}}

    {{#if parallax}}
        <script>
            $.stellar({
                responsive: true
            });
        </script>
    {{/if}}

    {{#is environment "dev"}}
        <script src="{{assets}}assets/themes/{{theme}}/app.js"></script>
    {{/is}}
    {{#is environment "prod"}}
        <script src="{{assets}}assets/themes/{{theme}}/app.min.js"></script>
    {{/is}}
</html>