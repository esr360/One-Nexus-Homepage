---
layout: core.hbs
wide: false
styles:
    - <%=assets%>assets/styles/one-nexus
scripts:
    - <%=assets%>assets/scripts/one-nexus
header:
    modifiers:
    - dark
billboard:
    heading: <%=title%>
container:
    modifiers:
    - section
breadcrumb: true
---

{{> header}}

{{#if billboard}}
    {{> billboard}}
{{/if}}

<main id="{{contentID}}">

    {{#if container}}
        <div class="container{{#each container.modifiers}}-{{.}}{{/each}}{{#if wide}}-large{{/if}}">
    {{/if}}

    {{#each notices}}
        <p class="alert-bar-{{type}}">{{#if icon}}<i class="fa fa-{{icon}}"></i>&nbsp; {{/if}}{{text}}</p>
    {{/each}}

    {{#if breadcrumb}}
        {{> breadcrumb}}
    {{/if}}

    {{> body}}

    {{#if container}}
        </div>
    {{/if}}
</main>

{{> footer}}